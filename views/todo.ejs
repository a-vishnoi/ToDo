<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ToDo</title>
    <link rel="stylesheet" href="css/styles.css" >
</head>
<body>

<div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
</div>

<div class="box">
    <ul>
        <% for(let i = 0 ; i < newItems.length ; i++){ %>
            <form method="post" action="/delete">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= newItems[i]._id %>" onchange="this.form.submit()">
                    <p> <%= newItems[i].name %> </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle%>">
            </form>
        <% } %>
    </ul>

    <form method="post" action="/" class="item">
        <input type="text" name="newtask" placeholder="New Item" autocomplete="off">
        <button name="button" type="submit" value=<%= listTitle %>>+</button>
    </form>
</div>
</body>
</html>